{
    "apiVersion": "v1",
    "kind": "DeploymentConfig",
    "metadata": {
        "name": "eodc-benchmark",
        "labels": {
            "app": "eodc-benchmark",
            "provider": "eodc",
            "project": "eodc-benchmark",
            "version": "1.0.0"
        }
    },
    "spec": {
        "template": {
            "spec": {
                "containers": [
                    {
                        "livenessProbe": {
                            "timeoutSeconds": 1,
                            "initialDelaySeconds": 30,
                            "tcpSocket": {
                                "port": 1234
                            }
                        },
                        "image": "eodc-benchmark",
                        "name": "eodc-benchmark",
                        "securityContext": {
                            "privileged": false
                        },
                        "ports": [
                            {
                                "containerPort": 1234,
                                "name": "http",
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "%s",
                                "memory": "%s"
                            },
                            "requests": {
                                "cpu": "%s",
                                "memory": "%s"
                            }
                        }
                    },
                    {
                        "image": "google/cadvisor",
                        "imagePullPolicy": "Always",
                        "name": "cadvisor",
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File"
                    }
                ]
            },
            "metadata": {
                "labels": {
                    "app": "eodc-benchmark",
                    "project": "eodc-benchmark",
                    "provider": "eodc",
                    "version": "1.0.0"
                }
            }
        },
        "replicas": 1,
        "selector": {
            "app": "eodc-benchmark",
            "project": "eodc-benchmark",
            "provider": "eodc"
        },
        "triggers": [
            {
                "type": "ConfigChange"
            },
            {
                "type": "ImageChange",
                "imageChangeParams": {
                    "automatic": true,
                    "containerNames": [
                        "eodc-benchmark"
                    ],
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "eodc-benchmark:latest"
                    }
                }
            }
        ]
    }
}